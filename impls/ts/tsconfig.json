{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES6"
    ],
    "target": "es6",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "outDir": "dist/esm",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": [
    "node_modules"
  ]
}
